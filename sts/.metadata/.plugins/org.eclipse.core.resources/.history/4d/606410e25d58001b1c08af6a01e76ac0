package com.hotel.rest.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;

@Controller
//@EnableWebMvc
public class WebController {

	@GetMapping("/index")
	public String index() {
		return "index";
	}
	
	@GetMapping("/rooms")
	public String rooms() {
		return "rooms";
	}
	
	@GetMapping("/detailRoom")
	public String detailRoom() {
		return "rooms-single";
	}
}